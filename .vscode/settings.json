{
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.meta": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.meta": true
  },
  "files.associations": {
    ".github/CODEOWNERS": "plaintext"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit"
    },
    "editor.inlayHints.enabled": "off"
  },
  "[csharp]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit",
      "source.sortMembers": "explicit"
    }
  },
  "[postgres]": { "editor.defaultFormatter": "bradymholt.pgformatter" },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.theme": "classic",
  "editor.formatOnSave": true,
  "dotnet.previewSolution-freeWorkspaceMode": true,
  "debug.onTaskErrors": "debugAnyway",
  "python.languageServer": "None",
  "python.experiments.enabled": false,
  "python.experiments.optOutFrom": ["All"],
  "basedpyright.analysis.diagnosticMode": "workspace",
  "pgFormatter.configFile": "${workspaceFolder}/pg_format.conf",
  "ruff.nativeServer": "on",
  "ruff.importStrategy": "useBundled"
}
