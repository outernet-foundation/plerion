{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Prelaunch: Debug workspace synchronizer",
      "type": "shell",
      "command": "uv run --with debugpy -m debugpy --log-to-stderr --listen 127.0.0.1:5678 --wait-for-client -m src.sync_workspace.main ${input:scriptArgs}",
      "options": { "cwd": "${workspaceFolder}/scripts" },
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "debugpy",
          "fileLocation": ["absolute"],
          "pattern": { "regexp": ".", "file": 1, "message": 1 },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*",
            "endsPattern": "^.*wait_for_client().*"
          }
        }
      ]
    },
    {
      "label": "Prelaunch: Attach to Unity - Android",
      "type": "shell",
      "command": "uv run --project scripts --no_workspace forward-unity-android-debug-port",
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Deptry Workspace Check",
      "type": "shell",
      "command": "uv run deptry-check",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "python",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "^(.+):(\\d+):(\\d+): (\\w+) (.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "scriptArgs",
      "type": "promptString",
      "description": "Optional script arguments",
      "default": ""
    }
  ]
}
