{
  "info": {
    "title": "Localizer",
    "version": "0.1.0"
  },
  "openapi": "3.0.3",
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "paths": {
    "/localization": {
      "post": {
        "summary": "LocalizeImage",
        "operationId": "localize_image",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/LocalizationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Document created, URL follows",
            "headers": {},
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/Localization"
                  },
                  "type": "array"
                }
              }
            }
          },
          "400": {
            "description": "Bad request syntax or unsupported method",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "status_code": {
                      "type": "integer"
                    },
                    "detail": {
                      "type": "string"
                    },
                    "extra": {
                      "additionalProperties": {},
                      "anyOf": [
                        {
                          "type": "object"
                        },
                        {
                          "type": "array",
                          "items": {}
                        }
                      ],
                      "nullable": true
                    }
                  },
                  "type": "object",
                  "required": [
                    "detail",
                    "status_code"
                  ],
                  "description": "Validation Exception",
                  "example": {
                    "status_code": 400,
                    "detail": "Bad Request",
                    "extra": {}
                  }
                }
              }
            }
          }
        },
        "deprecated": false
      }
    }
  },
  "components": {
    "schemas": {
      "AxisConvention": {
        "type": "string",
        "enum": [
          "OPENCV",
          "UNITY"
        ],
        "title": "AxisConvention"
      },
      "Float3": {
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        },
        "type": "object",
        "required": [
          "x",
          "y",
          "z"
        ],
        "title": "Float3"
      },
      "Float4": {
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          },
          "w": {
            "type": "number"
          }
        },
        "type": "object",
        "required": [
          "w",
          "x",
          "y",
          "z"
        ],
        "title": "Float4"
      },
      "Localization": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "transform": {
            "$ref": "#/components/schemas/Transform"
          },
          "metrics": {
            "$ref": "#/components/schemas/LocalizationMetrics"
          }
        },
        "type": "object",
        "required": [
          "id",
          "metrics",
          "transform"
        ],
        "title": "Localization"
      },
      "LocalizationMetrics": {
        "properties": {
          "inlier_ratio": {
            "type": "number"
          },
          "reprojection_error_median": {
            "type": "number"
          }
        },
        "type": "object",
        "required": [
          "inlier_ratio",
          "reprojection_error_median"
        ],
        "title": "LocalizationMetrics"
      },
      "LocalizationRequest": {
        "properties": {
          "reconstruction_ids": {
            "items": {
              "type": "string",
              "format": "uuid"
            },
            "type": "array"
          },
          "camera_config": {
            "$ref": "#/components/schemas/PinholeCameraConfig"
          },
          "axis_convention": {
            "$ref": "#/components/schemas/AxisConvention"
          },
          "retrieval_top_k": {
            "type": "integer"
          },
          "ransac_threshold": {
            "type": "number"
          },
          "image": {
            "type": "string",
            "format": "binary"
          }
        },
        "type": "object",
        "required": [
          "axis_convention",
          "camera_config",
          "image",
          "ransac_threshold",
          "reconstruction_ids",
          "retrieval_top_k"
        ],
        "title": "LocalizationRequest"
      },
      "PinholeCameraConfig": {
        "properties": {
          "width": {
            "type": "integer"
          },
          "height": {
            "type": "integer"
          },
          "orientation": {
            "type": "string",
            "enum": [
              "TOP_LEFT",
              "TOP_RIGHT",
              "BOTTOM_RIGHT",
              "BOTTOM_LEFT",
              "LEFT_TOP",
              "RIGHT_TOP",
              "RIGHT_BOTTOM",
              "LEFT_BOTTOM"
            ]
          },
          "fx": {
            "type": "number"
          },
          "fy": {
            "type": "number"
          },
          "cx": {
            "type": "number"
          },
          "cy": {
            "type": "number"
          }
        },
        "type": "object",
        "required": [
          "cx",
          "cy",
          "fx",
          "fy",
          "height",
          "orientation",
          "width"
        ],
        "title": "PinholeCameraConfig"
      },
      "Transform": {
        "properties": {
          "translation": {
            "$ref": "#/components/schemas/Float3"
          },
          "rotation": {
            "$ref": "#/components/schemas/Float4"
          }
        },
        "type": "object",
        "required": [
          "rotation",
          "translation"
        ],
        "title": "Transform"
      }
    }
  }
}