{
  "openapi": "3.0.3",
  "info": {
    "title": "Localize",
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "operationId": "health_check",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "additionalProperties": {
                    "type": "string"
                  },
                  "type": "object",
                  "title": "Response Health Check"
                }
              }
            }
          }
        }
      }
    },
    "/reconstructions/{id}": {
      "post": {
        "summary": "Load Reconstruction",
        "operationId": "load_reconstruction",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "title": "Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Unload Reconstruction",
        "operationId": "unload_reconstruction",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "title": "Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/reconstructions/{id}/status": {
      "get": {
        "summary": "Get Reconstruction Load Status",
        "operationId": "get_reconstruction_load_status",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "title": "Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoadStateResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/camera": {
      "put": {
        "summary": "Set Camera Intrinsics",
        "operationId": "set_camera_intrinsics",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PinholeCameraConfig"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/localization": {
      "post": {
        "summary": "Localize Image",
        "operationId": "localize_image",
        "parameters": [
          {
            "name": "axis_convention",
            "in": "query",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/AxisConvention"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Body_localize_image"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Localization"
                  },
                  "title": "Response Localize Image"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AxisConvention": {
        "type": "string",
        "enum": [
          "OPENCV",
          "UNITY"
        ],
        "title": "AxisConvention"
      },
      "Body_localize_image": {
        "properties": {
          "image": {
            "type": "string",
            "format": "binary",
            "title": "Image"
          }
        },
        "type": "object",
        "required": [
          "image"
        ],
        "title": "Body_localize_image"
      },
      "Float3": {
        "properties": {
          "x": {
            "type": "number",
            "title": "X"
          },
          "y": {
            "type": "number",
            "title": "Y"
          },
          "z": {
            "type": "number",
            "title": "Z"
          }
        },
        "type": "object",
        "required": [
          "x",
          "y",
          "z"
        ],
        "title": "Float3"
      },
      "Float4": {
        "properties": {
          "x": {
            "type": "number",
            "title": "X"
          },
          "y": {
            "type": "number",
            "title": "Y"
          },
          "z": {
            "type": "number",
            "title": "Z"
          },
          "w": {
            "type": "number",
            "title": "W"
          }
        },
        "type": "object",
        "required": [
          "x",
          "y",
          "z",
          "w"
        ],
        "title": "Float4"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "LoadState": {
        "type": "string",
        "enum": [
          "pending",
          "loading",
          "ready",
          "failed"
        ],
        "title": "LoadState"
      },
      "LoadStateResponse": {
        "properties": {
          "status": {
            "$ref": "#/components/schemas/LoadState"
          },
          "error": {
            "title": "Error",
            "nullable": true,
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "status"
        ],
        "title": "LoadStateResponse"
      },
      "Localization": {
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "title": "Id"
          },
          "transform": {
            "$ref": "#/components/schemas/Transform"
          },
          "metrics": {
            "$ref": "#/components/schemas/LocalizationMetrics"
          }
        },
        "type": "object",
        "required": [
          "id",
          "transform",
          "metrics"
        ],
        "title": "Localization"
      },
      "LocalizationMetrics": {
        "properties": {
          "inlier_ratio": {
            "type": "number",
            "title": "Inlier Ratio"
          },
          "reprojection_error_median": {
            "type": "number",
            "title": "Reprojection Error Median"
          }
        },
        "type": "object",
        "required": [
          "inlier_ratio",
          "reprojection_error_median"
        ],
        "title": "LocalizationMetrics"
      },
      "PinholeCameraConfig": {
        "properties": {
          "width": {
            "type": "integer",
            "title": "Width"
          },
          "height": {
            "type": "integer",
            "title": "Height"
          },
          "orientation": {
            "type": "string",
            "enum": [
              "TOP_LEFT",
              "TOP_RIGHT",
              "BOTTOM_RIGHT",
              "BOTTOM_LEFT",
              "LEFT_TOP",
              "RIGHT_TOP",
              "RIGHT_BOTTOM",
              "LEFT_BOTTOM"
            ],
            "title": "Orientation"
          },
          "fx": {
            "type": "number",
            "title": "Fx"
          },
          "fy": {
            "type": "number",
            "title": "Fy"
          },
          "cx": {
            "type": "number",
            "title": "Cx"
          },
          "cy": {
            "type": "number",
            "title": "Cy"
          }
        },
        "type": "object",
        "required": [
          "width",
          "height",
          "orientation",
          "fx",
          "fy",
          "cx",
          "cy"
        ],
        "title": "PinholeCameraConfig"
      },
      "Transform": {
        "properties": {
          "translation": {
            "$ref": "#/components/schemas/Float3"
          },
          "rotation": {
            "$ref": "#/components/schemas/Float4"
          }
        },
        "type": "object",
        "required": [
          "translation",
          "rotation"
        ],
        "title": "Transform"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }
}